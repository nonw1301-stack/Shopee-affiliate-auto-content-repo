# Shopee
SHOPEE_PARTNER_ID=your_partner_id
SHOPEE_PARTNER_KEY=your_partner_key
SHOPEE_API_BASE=https://partner.shopeemobile.com/api/v1
# Signing mode for Shopee requests. Supported: A, B, C
# A = HMAC over (path + canonical_query_or_body + timestamp)  (default)
# B = HMAC over (partner_id + path + timestamp)
# C = HMAC over (method + path + timestamp + body)
SHOPEE_SIGN_MODE=A

# OpenAI (ใช้สำหรับเขียน Caption / สคริปต์)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# Storage / Upload
OUTPUT_DIR=./output

# Scheduler
CRON_SCHEDULE=0 8 * * *   # ทุกวัน 08:00 (server timezone)

# (Optional) TikTok / Social creds (ถ้ามี API)
TIKTOK_API_KEY=
TIKTOK_CLIENT_ID=
TIKTOK_CLIENT_SECRET=
# TikTok OAuth / API endpoints (set when using real API)
TIKTOK_AUTH_URL=https://www.tiktok.com/v2/auth/authorize/
TIKTOK_TOKEN_URL=
TIKTOK_UPLOAD_URL=
TIKTOK_REDIRECT_URI=https://yourapp.example.com/tiktok/callback
TIKTOK_REFRESH_URL=

# Encrypted token store (used by local dev). Generate a URL-safe base64 key with:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=
TOKEN_STORE_PATH=./.tokens.enc
# Instagram (if using API)
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=

# Misc
MAX_PRODUCTS=10
